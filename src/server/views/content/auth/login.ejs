<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class="display-4">Login</h1>

            <!-- message area -->
            <% if(messages.error) { %>
            <div id="messageArea" class="alert alert-danger">
                <%= messages.error %>
            </div>
            <% } %>

            <form id="loginForm" novalidate method="POST">
                <p class="hint-text">Login to your account here!</p>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input type="text" class="form-control" id="username" name="username" value="" placeholder="Enter your username" required>
                  </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                    <input type="password" class="form-control" id="password" name="password" value="" placeholder="Enter your password" required>
                    </div>
                </div>                                        
                <div class="text-end mt-2">
                    <button id="loginButton" type="submit" class="btn btn-primary">Login</button>
                    <button id="cancelButton" type="reset" class="btn btn-warning">Cancel</button>
                </div>
            </form>
            </div>
            <p class="text-center text-muted small">Don't have an account? <a href="/auth/register">Register Here!</a></p>
    </div>
</div>