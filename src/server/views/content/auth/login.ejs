<div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class="text-center">Login</h1>

            <!-- message area -->
            <% if(messages.error) { %>
            <div id="messageArea" class="alert alert-danger">
                <%= messages.error %>
            </div>
            <% } %>

            <form method="POST" id="loginForm" novalidate>
                <div class="form-group">
                    <div class="row">
                        <p class="lead text-center">Account Information</p>
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="username" name="username" value="" placeholder="Enter your username..." required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" class="form-control mt-1" id="password" name="password" value="" placeholder="Enter your password..." required>
                        </div>
                    </div>
                </div>                                       
                <div class="form-group mt-2 d-flex flex-row justify-content-around">
                    <button id="loginButton" type="submit" class="btn btn-primary">Login</button>
                    <button id="cancelButton" type="reset" class="btn btn-warning">Cancel</button>
                </div>
            </form>
            </div>
            <p class="text-center text-muted small">Don't have an account? <a href="/auth/register">Register Here!</a></p>
    </div>
</div>